<script>
 window.onload=function(){
	 var ul1=document.getElementById("ul1");
	 var Li1=ul1.getElementsByTagName("a");
	 for(var i=0;i<Li1.length;i++){
		 Li1[i].onmouseover=function(){
		 this.style.color="grey";}
 }
     for(var i=0;i<Li1.length;i++){
		 Li1[i].onmouseout=function(){
		 this.style.color="black";}
 }
 
    var sidebar=document.getElementById("sidebar");
	sidebar.onmouseover=function(){
		startMove(0);}
	sidebar.onmouseout=function(){
		startMove(-264);}
		var timer=null;
		function startMove(target){
	 clearInterval(timer);
	 var oDiv=document.getElementById('sidebar');
	 /*if (target>oDiv.offsetLeft){
		 speed=10;}else{speed=-10;}
		 */
	timer=setInterval(function(){
	 var speed=(target-oDiv.offsetTop)/10;
	 speed=speed>0?Math.ceil(speed):Math.floor(speed);
	
	 if(oDiv.offsetTop==target){
	 clearInterval(timer);
	 }else{
	 oDiv.style.top=oDiv.offsetTop+speed+'px';
	 }
	 },30);
 }
		
 }
 
 
</script>



